package utils

import (
	"encoding/csv"
	"fmt"
	"os"
)

type FileUtils struct {
	BasePath string
	OSUtil   OSMethods
}

type FileUtilMethods interface {
	ReadUnlFiledata(fileName string) ([][]string, error)
}

type OSStruct struct {
}

type OSMethods interface {
	Open(fileName string) (*os.File, error)
}

func (ou *OSStruct) Open(fileName string) (*os.File, error) {
	return os.Open(fileName)
}

func (fu *FileUtils) ReadUnlFiledata(fileName string) ([][]string, error) {

	file, err := fu.OSUtil.Open(fileName)
	if err != nil {
		return nil, fmt.Errorf("Error while opening file: %v Err: %v", fileName, err)
	}

	defer file.Close()

	r := csv.NewReader(file)
	r.Comma = '|'

	restrictions, err := r.ReadAll()
	if err != nil {
		return nil, fmt.Errorf("Error while reading entries from file: %v Err: %v", fileName, err)
	}

	return restrictions, nil
}
